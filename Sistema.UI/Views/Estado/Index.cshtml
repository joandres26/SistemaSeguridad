@model IEnumerable<Sistema.Model.Estado>

@{
    ViewBag.Title = "Gestion de Estados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestion de Estados</h2>

<p>
    @Html.ActionLink("Crear un nuevo estado de articulo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.idEstado })
            @*
        |
        @Html.ActionLink("Details", "Details", new { id = item.idEstado }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.idEstado })
                *@
        </td>
    </tr>
}

</table>
