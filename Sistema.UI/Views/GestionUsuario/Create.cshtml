@model Sistema.Model.Usuario

@{
    ViewBag.Title = "Crear nuevo usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
