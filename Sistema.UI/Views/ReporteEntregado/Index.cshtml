@model IEnumerable<Sistema.Model.ReporteEntregado>

@{
    ViewBag.Title = "Reportes de Entrega";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Reportes de Entrega</h2>


<p>
    @Html.ActionLink("Crear Nuevo Reporte de entrega", "Create")
</p>

@using (Html.BeginForm("BusquedaFecha", "ReporteEntregado", FormMethod.Get))
{
<p>


    <input type="date" name="FechaInicial" data-date-format="yyyy-mm-dd"  />

    <input type="date" name="FechaFinal" data-date-format="yyyy-mm-dd"  />

    <input type="submit" value="BusquedaFecha" />

</p>


}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Fecha de entrega")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Articulo")
        </th>
        <th>
            @Html.DisplayName("Entregado al usuario")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Articulo.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Nombre)
            </td>
            <td>

                @*
                    @Html.ActionLink("Edit", "Edit", new { id=item.IdEntrega }) |
                    @Html.ActionLink("Details", "Details", new { id=item.IdEntrega }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.IdEntrega })
                *@
            </td>
        </tr>
    }

</table>
